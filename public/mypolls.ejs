<!DOCTYPE html>

<html>

	<head>
		<title>Vote Wars</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" type='text/css' href="css/bootstrap/bootstrap.min.css">
		<link href="css/main.css" rel="stylesheet" type="text/css">
	</head>

	<body>
      <nav class='navbar'>
            <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand" href="/">VoteWars</a>
                    <ul class="nav navbar-nav navbar-left">
                        <li><a href="/" class='home'>Home</a></li>
                    </ul> 
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li><p class='navbar-text'>Hello 
                        <% if (user.local.username) { %>
                            <%=user.local.username%>
                        <% } else { %>
                            <%=user.facebook.name%>
                        <% } %></p>
                    </li>
                    <li><a href='/settings'><span class='glyphicon glyphicon-cog'></span></a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
              </div>
        </nav>  
        <div class='jumbotron text-center'>
            <h1>Dashboard</h1>
            <p>What would you like to do today?</p>
            <a href='/dashboard' class='btn btn-success btn-large btn-poll'>New Poll</a>
            <a href='/mypolls' class='btn btn-primary btn-large btn-poll'>My Polls</a>
        </div>
      <div class='container-fluid'>
          <ul class='mypolls list-group'>
              <% polls.forEach(function(poll) { %>
                  <li class='list-group-item'><a href='<%=url + '/' + (user.local.username?user.local.username:user.facebook.name) + '/' + poll.url %>'><%=poll.name%></a><a href='<%= url + '/' + (user.local.username?user.local.username:user.facebook.name) + '/' + poll.url + '/results' %> ' class='btn btn-success pull-right btn-results'>Results</a><button data-id='<%=poll._id%>' class='btn btn-danger pull-right btn-delete'>Delete</button></li>
              <% }); %>
          </ul>
        </div>
        <script type="text/javascript" src="controllers/deleteController.client.js"></script>
	</body>
</html>